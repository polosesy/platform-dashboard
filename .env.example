# Shared
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

# API server
PORT=4000
CORS_ORIGIN=http://localhost:3000

# Azure AD (MSAL)
NEXT_PUBLIC_AZURE_AD_TENANT_ID=YOUR_TENANT_ID
NEXT_PUBLIC_AZURE_AD_CLIENT_ID=YOUR_WEB_CLIENT_ID
NEXT_PUBLIC_AZURE_AD_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_AZURE_AD_API_SCOPE=api://YOUR_API_CLIENT_ID/user_impersonation

# API Azure OBO (confidential client)
AZURE_AD_TENANT_ID=YOUR_TENANT_ID
AZURE_AD_CLIENT_ID=YOUR_API_CLIENT_ID
AZURE_AD_CLIENT_SECRET=YOUR_CLIENT_SECRET

# Azure
AZURE_SUBSCRIPTION_IDS=SUBSCRIPTION_ID_1,SUBSCRIPTION_ID_2

# Azure Log Analytics (Traffic Analytics)
# Workspace ID (GUID), not resource ID.
AZURE_LOG_ANALYTICS_WORKSPACE_ID=YOUR_LOG_ANALYTICS_WORKSPACE_ID
AZURE_LOG_ANALYTICS_TABLE=NTANetAnalytics

# Azure Reservations (Consumption)
# AZURE_RESERVATIONS_GRAIN=monthly

# Azure Cost Management
# AZURE_COST_MANAGEMENT_ENABLED=true
# AZURE_COST_CACHE_TTL_MS=300000

# Azure Security (Defender for Cloud)
# AZURE_SECURITY_ENABLED=true
# AZURE_SECURITY_CACHE_TTL_MS=300000

# Azure Resource Health
# AZURE_HEALTH_ENABLED=true
# AZURE_HEALTH_CACHE_TTL_MS=120000

# Live Diagram — Azure Monitor real integration
# Set to true to enable real Azure Monitor API calls for live diagrams.
# When false, mock data is used (safe for local dev without Azure).
# AZURE_LIVE_DIAGRAM_ENABLED=true
# AZURE_LIVE_METRICS_CACHE_TTL_MS=60000
# AZURE_MONITOR_ALERTS_CACHE_TTL_MS=60000

# Live Diagram — Application Insights (optional)
# Component name within the same resource group as your monitored resources.
# Used for edge bindings with source: "appInsights".
# AZURE_APP_INSIGHTS_APP_ID=your-appinsights-component-name
# AZURE_APP_INSIGHTS_CACHE_TTL_MS=60000

# ArgoCD
ARGOCD_BASE_URL=https://argocd.example.com
ARGOCD_TOKEN=YOUR_ARGOCD_TOKEN
